<resources>

    <!-- Base application theme. -->
    <style name="MyLibraryTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyLibraryTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MyLibraryTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="MyLibraryTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyLibraryTheme.BookcaseDetailsItemCaption" parent="@android:style/TextAppearance.Material.Small">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginTop">24dp</item>
    </style>

    <style name="MyLibraryTheme.BookcaseDetailsItem" parent="@android:style/TextAppearance.Material.Large">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
   </style>

    <style name="MyLibraryTheme.FillParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="MyLibraryTheme.FillParent.BookcaseDetailsTextColor">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

</resources>
